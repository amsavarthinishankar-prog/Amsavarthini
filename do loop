        int num;
        Scanner data = new Scanner(System.in);
        do{
         System.out.println("Enter the number  from 1 to 10:");
         num = data.nextInt();
         
        
            if (num >= 1 && num <= 10) {
         if(num % 2==0){
            System.out.println("the number is even");
        }else{
        System.out.println("the number is odd");
        }
      } else if (num >= 0) {
                
            }

        } while (num >= 0);
    }
}
