class userDtails{
    public static void main(String[]args){
        Scanner input = new Scanner(System.in);
        System.out.print("Enter Your name:");
        String name = input.nextLine();
        System.out.print("Enter Your gender(male/female)");
        char gender = input.next().charAt(0);
        System.out.print("Enter Your age:");
         Short age = input.nextShort();
         System.out.print("Enter Your SPR number:");
         int sprno = input.nextInt();
         System.out.print("Enter Your phone number:");
         long Phonenumber = input.nextLong();
         System.out.print("Enter Ypur  Height in feet:");
         float Height = input.nextFloat();
         System.out.print("Enter your weight in kg:");
         double weight = input.nextDouble();
         System.out.print("Are you a college student?(yes/no):");
         String response = input.next();
         boolean isCollegeStudent = response.equalsIgnoreCase("yes");
         System.out.print("Enter how many siblings you have(0-5):");
         byte siblings = input.nextByte();
        System.out.println("\n--- User Details ---");
         System.out.println("Name         : " + name);
        System.out.println("Gender       : " + gender);
        System.out.println("Age          : " + age);
        System.out.println("SPR number:" + sprno);
        System.out.println("Phonenumber:" + Phonenumber);
        System.out.println("Height :" + Height +"ft");
        System.out.println("weight:"+weight +"kg");
        System.out.println("college student:" + isCollegeStudent);
        System.out.println("you have"+siblings +"siblings.");
        
    }
}
output:
